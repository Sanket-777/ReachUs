<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookService"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/ic_name"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/bookStoreName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Store Name"
                    android:fontFamily="@font/font10"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/bookProviderName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Provided By"
                    android:fontFamily="@font/font11"
                    android:layout_marginTop="-10dp"
                    android:textSize="12dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service Description"
                android:textSize="25dp"
                android:fontFamily="@font/font10"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/bookServiceDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Here comes Description"
                android:textSize="16dp"
                android:fontFamily="@font/font11"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/bookServiceAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service Provider Location"
                android:textSize="25dp"
                android:fontFamily="@font/font10"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="@drawable/input_design"
            android:padding="10dp">
            <TextView
                android:id="@+id/bookServicePrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service Price"
                android:textSize="25dp"
                android:fontFamily="@font/font10"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="bottom|center">
            <Button
                android:id="@+id/bookService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font10"
                android:layout_gravity="center|bottom"
                android:text="Book Service"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>