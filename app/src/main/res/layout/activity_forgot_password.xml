<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Forgot_password"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="186dp"
        android:layout_gravity="center"
        android:src="@drawable/fgpass" />
    <TextView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:fontFamily="@font/font10"
        android:layout_height="wrap_content"
        android:text="FORGOT                     PASSWORD"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textAlignment="center"
       />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/frg_pass"
        android:padding="20dp"
        android:textColor="#272525"
        android:textAlignment="center"/>
    <EditText
        android:id="@+id/frg_email"
        android:padding="12dp"
        android:drawablePadding="12dp"
        android:background="@drawable/custome_input"
        android:drawableStart="@drawable/ic_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="Email"
        />

    <Button
        android:id="@+id/frg_send_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:backgroundTint="#000"
        android:textSize="20dp"
        android:text="Next"
        android:layout_marginLeft="150sp"
        android:layout_marginRight="150sp"
        />




</LinearLayout>